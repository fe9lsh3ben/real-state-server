////________ Enums Module__________//

enum User_Type {
    REAL_ESTATE_OFFICE_OWNER
    MULTY_REAL_ESTATE_OFFICE_OWNER
    REAL_ESTATE_OFFICE_STAFF
    BENEFICIARY
    BUSINESS_BENEFICIARY
    GOVERNMENTAL_AGENT
    OTHER

    @@map("UserType")
}

enum Admin_Privilege {
    FULL //Create lower admins and give them privilege, plus lower privilege
    PARTIAL //delete normal sources, snd give agrement for critical sources, plus lower privilege
    LIMITED //create critical surces like terms, plus lower privilege
    MONITOR //Monitoring and make reports.

    @@map("AdminPrivilege")
}

enum Office_Or_User_Status {
    IN_HOLD
    ACTIVE
    INACTIVE
    TEMP_INACTIVE
    RESTRICTED
    BANNED

    @@map("OfficeOrUserStatus")
}

enum Real_Estate_Unit_Type {
    LAND
    BUILDING
    APARTMENT
    VILLA
    STORE
    FARM
    CORRAL
    STORAGE
    OFFICE
    SHOWROOM
    WEDDING_HALL
    OTHER

    @@map("RealEstateType")
}

enum Direction {
    NORTH
    SOUTH
    EAST
    WEST
    NORTHEAST
    SOUTHEAST
    SOUTHWEST
    NORTHWEST
    CENTER
}

enum Committed_By {
    OFFICE_OWNER
    OFFICE_STAFF
    BENEFICIARY //(Normal user)
    BUSINESS_BENEFICIARY
}

enum Fal_Type {
    BROKERING_AND_MARKITING
    BROKERING_AND_MARKITING_FOR_VIRTUAL_PLATFORM
    REAL_ESTATE_ANALYSIS
    REAL_ESTATE_CONSULTANT
}

enum AD_Type {
    RENT
    SELL
    INVESTMENT
    SERVICE
}

enum Note_Type {
    REQUEST
    QUERY
}

//________ Models Module__________//

// Define the Setting table
model Setting {
    Setting_ID Int    @id @default(autoincrement())
    Name       String @unique
    Value      String
}

// Define the AuditTrail table
model AuditTrail {
    AT_ID       Int      @id @default(autoincrement())
    User_ID     Int?
    Action      String
    Description String?
    Created_At  DateTime @default(now())
}

model AdministrationUser {
    //INSERT INTO "AdministrationUser" ("Gov_ID", "Name", "Username", "Password", "Privilege") VALUES ('G-456789', 'Jane Doe', 'jane.admin', 'hashed_secure_password', 'FULL');
    Admin_ID               Int                 @id @default(autoincrement())
    Gov_ID                 String
    Name                   String
    Username               String
    Password               String
    Privilege              Admin_Privilege
    TermsAndConditionsMade TermsAndCondition[]
    Created_At             DateTime            @default(now())

    //uncomment the following lines if you want to add more fields

    // Security:-
    // Last_Login_At   DateTime?
    // Last_Login_IP   String?
    // Failed_Attempts Int       @default(0)
    // Locked_Until    DateTime?

    // Audit:-
    // Created_By_Admin_ID Int?
    // Updated_By_Admin_ID Int?
    // Updated_At          DateTime?
}

model TermsAndCondition {
    //INSERT INTO "TermsAndCondition" ("TC_ID", "Content", "Other", "Committed_By", "Admin_ID") VALUES ('BB_000001', '{"ar": "الشروط والأحكام للمستفيد", "en":"terms and conditions for BENEFICIARY"}', ARRAY['{"type": "legal_disclaimer"}', '{"source": "external_link"}']::JSONB[], 'BENEFICIARY', 1);
    TC_ID        String             @id
    Created_At   DateTime           @default(now())
    Content      Json
    Other        Json[]
    Committed_By Committed_By
    Users        User[]
    Offices      RealEstateOffice[]
    Admin_ID     Int
    Made_By      AdministrationUser @relation(fields: [Admin_ID], references: [Admin_ID])
}

// Define the Session table
model Session {
    SToken_ID  Int       @id @default(autoincrement())
    Token      String?   @unique
    User_ID    Int       @unique
    User       User      @relation(fields: [User_ID], references: [User_ID])
    Expires_At DateTime?
    Revoked_At DateTime?
}

model RefreshToken {
    RToken_ID     Int       @id @default(autoincrement())
    Refresh_Token String?   @unique
    User_ID       Int       @unique
    User          User      @relation(fields: [User_ID], references: [User_ID])
    Expires_At    DateTime?
    Revoked_At    DateTime?
}

// Define the User table
model User {
    User_ID           Int               @id @default(autoincrement())
    Role              User_Type         @default(BENEFICIARY)
    Created_At        DateTime          @default(now())
    Updated_At        DateTime          @updatedAt
    TermsCondetion_ID String
    TermsAndCondition TermsAndCondition @relation(fields: [TermsCondetion_ID], references: [TC_ID])

    Refresh_Token RefreshToken?
    Session       Session?

    //___

    Username      String @unique
    Email         String @unique
    Password      String
    Profile_Image Bytes?
    Gov_ID        String @unique

    //Address      
    Region String
    City   String

    Full_Name  String[]
    User_Phone String
    //___

    Other1 Json[] // Admin={Log_records}, Beneficiary={Beneficiary_class}, Govermental={Other}, Office_Staff{BelongToOffice}

    RE_Offices RealEstateOffice[] @relation(name: "Office Owner")

    Employer_REO_ID Int?
    Employer_REO    RealEstateOffice? @relation(name: "OfficeStaff", fields: [Employer_REO_ID], references: [Office_ID])

    Fal_Licenses FalLicense[] @relation(name: "License Owner")

    Contracts   Int[]
    Balance     Decimal                @default(0.0)
    User_Status Office_Or_User_Status? @default(ACTIVE)
}

model RealEstateOffice {
    Office_ID           Int               @id @default(autoincrement())
    Commercial_Register String
    Owner_ID            Int
    Owner               User              @relation(name: "Office Owner", fields: [Owner_ID], references: [User_ID])
    Office_Name         String            @unique
    Office_Phone        String
    Office_Image        Bytes
    Office_Banner_Image Bytes?
    Other               Json?
    TermsCondetion_ID   String
    TermsAndCondition   TermsAndCondition @relation(fields: [TermsCondetion_ID], references: [TC_ID])

    //Address      
    Region    String
    City      String
    District  String
    Direction Direction
    Latitude  Decimal //   Decimal, for more precision
    Longitude Decimal
    Status    Office_Or_User_Status

    //Fall License is list becuase fall license has many types
    FalLicense FalLicense[] @relation("OfficeAndLicense")

    Staff User[] @relation("OfficeStaff")

    RealEstate_Units RealEstateUnit[] @relation("OfficeAndREUnit")
    Contracts        Contract[]
    ADs              RealEstateAD[]
    Visitors         Json? //{date : number of visitors}

    Notifications Notification[]
    Rating        Decimal        @default(0.0)
    Balance       Decimal        @default(0.0)
    Created_At    DateTime       @default(now())
    Updated_At    DateTime       @updatedAt
}

model FalLicense {
    License_ID         Int      @id @default(autoincrement())
    Fal_License_Number String   @unique
    License_Type       Fal_Type
    Owner_ID           Int
    Owner              User     @relation("License Owner", fields: [Owner_ID], references: [User_ID])
    Issue_Date         DateTime
    Expiry_Date        DateTime

    //Oficeses is list becuse the owner may have many offices and one fal license
    Offices RealEstateOffice[] @relation("OfficeAndLicense")

    @@index([Owner_ID])
    @@index([License_Type])
}

model RealEstateUnit {
    Unit_ID     Int                   @id @default(autoincrement())
    Unit_Type   Real_Estate_Unit_Type
    RE_Name     String
    Deed_Number String                @unique
    Deed_Date   DateTime
    Deed_Owners Json[] //{Owner_Name, Owner_GovID, Owner_Phone_Number}

    Affiliated_Office_ID Int?
    Affiliated_Office    RealEstateOffice? @relation("OfficeAndREUnit", fields: [Affiliated_Office_ID], references: [Office_ID])

    Initiator Json //{"Created_By":{ "User_ID", "Full_Name"}, "Edited_By":[{"User_ID", "Full_Name"}]}

    //Address      
    Region    String
    City      String
    District  String
    Direction Direction
    Latitude  Decimal //   Decimal, for more precision
    Longitude Decimal

    Outdoor_Unit_Images Bytes[]
    Created_At          DateTime                @default(now())
    Updated_At          DateTime                @updatedAt
    Polygon             Unsupported("POLYGON")?
    Unit_ADs            RealEstateAD[]
}

model RealEstateAD {
    AD_ID            Int              @id @default(autoincrement())
    Office_ID        Int
    Initiator_Office RealEstateOffice @relation(fields: [Office_ID], references: [Office_ID])
    Initiator        Json //{"Created_By":{ "User_ID", "Full_Name"}, "Edited_By":[{"User_ID", "Full_Name", "Edited_At"}]}
    Created_At       DateTime         @default(now())
    Updated_At       DateTime         @updatedAt
    Unit_ID          Int
    Unit             RealEstateUnit   @relation(fields: [Unit_ID], references: [Unit_ID])

    AD_Type            AD_Type
    AD_Unit_Type       Real_Estate_Unit_Type
    AD_Title           String
    Indoor_Unit_Images Bytes[]
    AD_Specifications  Json //{Description , Price, Other} 
    Unit_Price         Decimal               @default(0.0) @db.Decimal(11, 2)
    Visable_Zoom       Decimal?               
    Hedden             Boolean               @default(false)
}

model Contract {
    Contract_ID      Int              @id @default(autoincrement()) //D&T
    Office_ID        Int
    Initiator_Office RealEstateOffice @relation(fields: [Office_ID], references: [Office_ID])
    Parties_Consent  Json[] //{GOV_ID, Name, Signature_OTP, Phone_Number}
    Subject          String
    Content          Json //{ Content, contract terms}   
    Other            Json?
    Created_At       DateTime         @default(now())
    Updated_At       DateTime         @updatedAt
}

model Notification {
    Note_ID    Int       @id @default(autoincrement())
    Sender_ID  Int
    Note_Type  Note_Type // "REQUEST" | "QUERY" | etc
    Content    String
    Read       Boolean   @default(false)
    Created_At DateTime  @default(now())

    Office_ID Int
    Office    RealEstateOffice @relation(fields: [Office_ID], references: [Office_ID])
}

model DeletionLog {
    Log_ID     Int      @id @default(autoincrement())
    Record_ID  Int
    Table_Name String
    Deleted_By String
    Deletd_At  DateTime @default(now())
}

